---
import Wrapper from '../components/Wrapper.astro';
import H1 from '../components/Heading/H1.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import { client } from '../lib/api/api';
import PortableTextWrapper from '../components/PortableTextWrapper.astro';

const [content]  = await client.fetch(`
    *[ _type == 'support' ] {
        intro
	}
`)

---

<BaseLayout props
	title="Support"
	description="Support Nova Alexender, digital artist and writer"
	lang="en"
>

	<section class="mt-28">
		<Wrapper width='max' padding='inline' class="">
			<H1>Support</H1>

			
			<div class="grid gap-2 md:grid-cols-2 items-start">
				
				<div class="grid gap-6">
					<Button href="https://ko-fi.com/pinkartwitch/commissions">
						Head to Shop
					</Button>

					<PortableTextWrapper value={content.intro} />

				</div>

				<div>
					<iframe id='kofiframe' src='https://ko-fi.com/pinkartwitch/?hidefeed=true&widget=true&embed=true&preview=true' style='border:none;width:auto;min-width:400px;padding:4px;background:transparent;' height='712' title='pinkartwitch' class="mx-auto"></iframe>
				</div>

			</div>

		</Wrapper>
	</section>

</BaseLayout>
