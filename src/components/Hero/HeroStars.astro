---
import Image from "../Image.astro"
---


<Image
    src="/img/hero-stars.webp"
    width={67}
    height={101}
    alt="Stars"
    class="absolute left-1/2 sm:left-auto sm:right-[6vw] top-16 sm:top-48 z-[1] scale-50 sm:scale-100 hero-stars-animation"
/>


<style is:global>

.hero-stars-animation {
    animation : hero-stars-animation 1s cubic-bezier(0.22, 1, 0.36, 1) 200ms;
}

@keyframes hero-stars-animation {
    from {
        opacity: 0;
        translate: 100px 20px;
    }
    to {
        opacity: 1;
        translate: 0;
    }
}

</style>

    