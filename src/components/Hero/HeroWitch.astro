---
import Image from "../Image.astro"
---

<Image 
    src="/img/pink-witch.webp"
    width={141}
    height={187}
    alt="Pink witch drawn by Nova Alexander"
    class="hero-pink-witch absolute right-0 top-32 sm:right-auto sm:left-[6vw] md:left-[8vw] hero-pinkwitch-animation"
/>

<style>

@media screen and (max-width : 639px) {
    img.hero-pink-witch {
        transform: rotateY(180deg);
    }
}

.hero-pinkwitch-animation {
    animation : hero-pinkwitch-animation 1s cubic-bezier(0.22, 1, 0.36, 1);
}

@keyframes hero-pinkwitch-animation {
    from {
        opacity: 0;
        translate: -50px 0;
    }
    to {
        opacity: 1;
        translate: 0;
    }
}
    
</style>
