---
import Wrapper from "./Wrapper.astro";
import Button from "./Button.astro";
import HeroScrollBtns from "./Hero/HeroScrollBtns.astro";
import HeroArt from "./Hero/HeroArt.astro";
import HeroMoreArtBtn from "./Hero/HeroMoreArtBtn.astro";
import HeroWitch from "./Hero/HeroWitch.astro";
import HeroStars from "./Hero/HeroStars.astro";
import HeroStarCircle from "./Hero/HeroStarCircle.astro";

---

<section 
    id="hero" 
    data-element="hero" 
    class=" bg-[url(/img/hero-bg-desktop.webp)] bg-cover bg-bottom  text-primary-100"
>
    
    <Wrapper 
        width="max" 
        padding="inline"
        class="relative pt-32 pb-48"
    >
    
        <div class="grid gap-4 sm:text-center text-primary-500 relative z-10">
            <h1 class="text-2xl uppercase font-bold w-[65vw] sm:w-[30vw] sm:mx-auto">
                <slot name="heroHeadline" />
            </h1>
        
            <p class="w-[65vw] sm:w-[30vw] sm:mx-auto text-lg">
                <slot name="heroSubHeadline">
            </p>
        
            <div class="grid sm:flex gap-4 sm:w-min sm:mx-auto">
                <Button variant="fill-primary" href="/shop">
                    Shop
                    <svg width="23" height="20" viewBox="0 0 23 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M1 1H2.75L3.5 4M3.5 4L6 14H19L21.5 4H3.5Z" stroke="#F9D2E2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M6 19C6.82843 19 7.5 18.3284 7.5 17.5C7.5 16.6716 6.82843 16 6 16C5.17157 16 4.5 16.6716 4.5 17.5C4.5 18.3284 5.17157 19 6 19Z" stroke="#F9D2E2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M19 19C19.8284 19 20.5 18.3284 20.5 17.5C20.5 16.6716 19.8284 16 19 16C18.1716 16 17.5 16.6716 17.5 17.5C17.5 18.3284 18.1716 19 19 19Z" stroke="#F9D2E2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </Button>
                <Button variant="fill-primary" href="#social-media">
                    Social Feed
                    <svg width="23" height="22" viewBox="0 0 23 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M8.92116 11.052L7.50716 12.466L11.7502 16.71L15.9932 12.467L14.5782 11.053L12.7502 12.88L12.7502 5.34301L10.7502 5.34301L10.7502 12.88L8.92116 11.052Z" fill="#F9D2E2"/>
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M3.972 18.778C8.268 23.074 15.232 23.074 19.528 18.778C23.824 14.482 23.824 7.518 19.528 3.222C15.232 -1.074 8.268 -1.074 3.972 3.222C-0.323998 7.518 -0.323999 14.482 3.972 18.778ZM5.386 17.364C7.07384 19.0518 9.36304 20.0001 11.75 20.0001C14.137 20.0001 16.4262 19.0518 18.114 17.364C19.8018 15.6762 20.7501 13.387 20.7501 11C20.7501 8.61304 19.8018 6.32384 18.114 4.636C16.4262 2.94816 14.137 1.99994 11.75 1.99994C9.36304 1.99994 7.07384 2.94816 5.386 4.636C3.69816 6.32384 2.74995 8.61304 2.74995 11C2.74995 13.387 3.69816 15.6762 5.386 17.364Z" fill="#F9D2E2"/>
                    </svg>
                </Button>
            </div>
        </div>

        <HeroWitch />

        <HeroStars />

        <HeroStarCircle />
        
    </Wrapper>
    
</section>


<div class="relative mx-auto w-fit text-primary-100 -mt-36">

    <HeroScrollBtns />

    <div 
        class="flex items-stretch gap-4 overflow-y-auto py-8 scrollbar snap-x snap-mandatory px-4"
        data-hero-art-container
    >

        <slot name="heroArt" />

        <HeroMoreArtBtn />

    </div>

</div>






