---
import type { HTMLAttributes } from "astro/types";
interface Prop extends HTMLAttributes<'a'> { }
const {...rest} = Astro.props
---

<a href="#content" {...rest}>
    Skip to content
</a>


<style>
  a {
    position : absolute;
    inset : 0 0 auto 0;
    z-index : 99999;
    padding : 1rem;
    transform: translateY(-200%);

    text-align: center;
    text-decoration: none;
    font-weight: bold;
    background-color : hsl( var(--primary-color) 15% );
    color : hsl( var(--primary-color) 90% ) !important;

    transition : all 300ms ease-in-out;
}

a:focus {
    transform: translateY(0);
}
</style>