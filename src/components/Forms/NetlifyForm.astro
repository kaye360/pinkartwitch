---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'form'> {

    name : string,
    subject? : string,
    class? : string,
    /**
     * @prop name - string - Name of form for Netlify UI
     * @prop subject - string - Email subject
     * @prop class - string - form class
     * @prop slot
     */
    props? : true
    
}

const {
    name,
    subject,
    class : className = ''
} = Astro.props
---

<form id="email-form" method="post" data-netlify="true" name={name} class={className}>

    { subject && <input type="hidden" name="subject" value={subject} /> }

    <slot />

</form>


<style>

form {
    display : grid;
    gap : 2rem;
}
</style>