---
import { SOCIAL_LINKS } from "../../config";
import DeviantArtIcon from "../icons/DeviantArtIcon.astro";
import InstagramIcon from "../icons/InstagramIcon.astro";
import KofiIcon from "../icons/KofiIcon.astro";
import ThreadsIcon from "../icons/ThreadsIcon.astro";
import TumblrIcon from "../icons/TumblrIcon.astro";


---
<!-- lg:absolute lg:right-0 lg:bottom-[60%] p-3 lg:bg-[var(--body-bg-color)] lg:bg-primary-50 -->
<ul class="social-links  flex items-center gap-4 social-links justify-center lg:justify-end order-2 lg:order-1 ">
    <li>
        <a 
            href={SOCIAL_LINKS.instagram} 
            target="_blank" 
            class="text-primary-500 hover:text-primary-900"
            aria-label="View @pinkartwitch on Instagram"
        >
            <InstagramIcon />
        </a>
    </li>

    <li>
        <a 
            href={SOCIAL_LINKS.deviantArt} 
            target="_blank" 
            class="text-primary-500 hover:text-primary-900"
            aria-label="View @pinkartwitch on DeviantArt"
        >
            <DeviantArtIcon />
        </a>
    </li>

    <li>
        <a 
            href={SOCIAL_LINKS.tumblr} 
            target="_blank" 
            class="text-primary-500 hover:text-primary-900"
            aria-label="View @pinkartwitch on Tumblr"
        >
            <TumblrIcon />
        </a>
    </li>

    <li>
        <a 
            href={SOCIAL_LINKS.threads} 
            target="_blank" 
            class="text-primary-500 hover:text-primary-900"
            aria-label="View @pinkartwitch on Threads"
        >
            <ThreadsIcon />
        </a>
    </li>

    <li>
        <a 
            href={SOCIAL_LINKS.kofi} 
            target="_blank"
            class="text-primary-500 hover:text-primary-900"
            aria-label="View @pinkartwitch on Ko-fi"
        >
            <KofiIcon />
        </a>
    </li>
</ul>


<style is:global>

ul.social-links {
    transition: all 350ms cubic-bezier(0.34, 1.56, 0.64, 1);
}



@media screen and (max-width: 1023px) {

    .social-links {
        padding-block: 0;
        max-height: 0px;
        overflow: hidden;
    }

    .mobile-menu-is-open .social-links {
        padding-block: 3rem;
        max-height: 1000px;
    }

}

</style>

